
<div class="container">
  <p id="notice"><%= notice %></p>
  <h2>マイページ</h2>

  <h3>登録情報</h3>

  <%= link_to '編集する', edit_customer_registration_path %>

  <table class="table">
    <tr>
      <th>名前</th>
      <td><%= current_customer.last_name %> <%= current_customer.first_name %></td>
    </tr>
    <tr>
      <th>カナ</th>
      <td><%= current_customer.kana_last_name %> <%= current_customer.kana_first_name %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= current_customer.postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= current_customer.residence %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= current_customer.phone_number %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= current_customer.email %></td>
    </tr>

  </table>

   <div class="shipping_adresses_link">
     <h3>配送先</h3>
     <%= link_to '一覧を見る', shipping_addresses_path %>
   </div>

   <div class="ordered_link">
     <h3>注文履歴</h3>
     <%= link_to '一覧を見る', orders_path %>
   </div>
 </div>