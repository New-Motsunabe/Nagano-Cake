<div class="container">
  <%= flash[:notice] %>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>商品一覧<span>(全<%= @quantity %>件)</span></h2>

      <% @products.each do |product| %>
        <%= link_to product_path(product.id) do %>
          <%= attachment_image_tag(product, :image, :fill, 100, 100, fallback: "Nagano Cake.png") %><br>

        <% end %>
        <p><%= product.name %></p>
        <!--tax_priceのカラムがないので表示できない-->
        <p>¥<%= product.tax_price.to_s(:delimited) %></p>
      <% end %>
    </div>
    <%= paginate @products %>
  </div>
</div