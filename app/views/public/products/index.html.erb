<div class="container">
  <%= flash[:notice] %>
  <h2>商品一覧<span>(全<%= @quantity %>件)</span></h2>
  <div class="row">
    <div class="product_container">
        <% @products.each do |product| %>
        <div class="product-items">
        <%= link_to product_path(product.id) do %>
          <%= attachment_image_tag(product, :image, :fill, 230, 200, fallback: "Nagano Cake.png") %><br>
        <% end %>
        <p><%= product.name %></p>
        <p>¥<%= product.tax_price.to_s(:delimited) %>(税込) </p>
        </div>
      <% end %>
    </div>
    <%= paginate @products %>
  </div>
</div