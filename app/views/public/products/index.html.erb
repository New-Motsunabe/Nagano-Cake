<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>商品一覧</h2>
      <% @products.each do |product| %>
        <%= link_to product_path(product.id) do %>
          <%= attachment_image_tag(product.id, :image, :fill, 100, 100, fallback: "no-image-icon.jpg") %><br>
        <% end %>
        <p><%= product.name %></p>
        <p>¥<%= product.tax_price.to_s(:delimited) %></p>
      <% end %>
    </div>
  </div>
</div