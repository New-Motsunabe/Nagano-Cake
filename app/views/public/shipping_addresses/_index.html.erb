<% if shipping_addresses.present? %>
  <table class="table table-hover table-bordered">
    <thead>
        <tr class="info">
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th colspan="2"></th>
        </tr>
    </thead>

    <tbody>
      <% @shipping_addresses.each do |shipping_address| %>
        <tr>
            <td>
                <%= shipping_address.postal_code %>
            </td>
            <td class="text-left">
                <%= shipping_address.residence %>
            </td>
            <td class="text-left">
                <%= shipping_address.address_name %>
            </td>
            <td>
                <%= link_to "編集する","/shipping_addresses/#{shipping_address.id}/edit", class: "glyphicon glyphicon-pencil btn-sm btn-primary" %>
            </td>
            <td>
                <%= link_to "削除する","/shipping_addresses/#{shipping_address.id}", method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, remote: true, class: "glyphicon glyphicon-trash btn-sm btn-danger destroy_book_#{shipping_address.id}" %>
            </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>