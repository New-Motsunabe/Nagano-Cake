<div class="cotainer">
  <div class="row">
    <div class="col-md-10">
      <h2>ショッピングカート</h2>
    </div>
    <div class="col-md-2">
      <%= link_to "カートを空にする", cart_items_destroy_all_path(@cart_items), method: :delete, class: "btn btn-danger" %>
    </div>
    <table class="table table-striped col-md-12">
      <thead>
        <tr class="info">
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items. each do |cart_item| %>
          <tr>
            <td>
              <%= link_to product_path(cart_item.product_id) do %>
                 <!--attachment_image_tag (cart_item.product, :image, size: "30x30", fallback: "no_image.jpg") -->
                 <!--画像挿入がまだ出来てない-->
              <% end %>
            </td>
            <td>
              <%= (cart_item.product.price * 1.1).floor %>
            </td>
            <td>
              <%= form_for cart_item, url: cart_item_path(cart_item) do |f| %>
                <%= f.select_field :amount %>
                <%= f.submit "変更",class:"btn btn-primary btn-xs" %>
              <% end %>
            </td>
            <td>
              <%= ((cart_item.product.price * 1.1).floor * cart_item.amount).to_s(:delimited) %>
            </td>
            <td>
              <%= link_to "消除する", cart_items_path, method: :delete, data: {confirm: "#{cart_item.product.name}を削除してよろしいですか？"}, class: "btn btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="col-md-9">
      <%= link_to "買い物を続ける", products_path, class: "btn btn-primary" %>
    </div>
    <div class="col-md-3">
      <div class="total-price">
        <p>合計金額</p>
      </div>
      <div class="total-price">
        <%= @total %>
      </div>
    </div>
    <div class="order col-md-12">
      <%= link_to "情報入力画面に進む", new_order_path, class: "btn btn-success" %>
    </div>
  </div>
</div>