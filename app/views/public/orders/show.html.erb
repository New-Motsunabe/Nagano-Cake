<h2>注文履歴詳細</h2>

<h3>注文情報</h3>
<table>
<tr>
<th>購入者</th>
<td><%= @order.customer.name %></td>
</tr>
<tr>
<th>注文日</th>
<td><%= @order.created_at.strftime("%Y-%m-%d") %></td>
</tr>
<tr>
<th>配送先</th>
<td><%= @order.postal_code %> <%= @order.residence %><%= @order.address_name %></td>
</tr>
<tr>
<th>支払方法</th>
<td><% @order.payment_method %></td>
</tr>
<tr>
<th>ステータス</th>
<td><% @order.order_status %></td>
</tr>
</table>

<h3>注文内容</h3>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
    <tbody>

      <% @order. each do |order| %>

      <tr>
        <td><%= order.ordered_products.name %></td>
        <td><%= order.tax_price %></td>
        <td><%= order.ordered_products.amount %></td>
        <td><%= order.tax_price*ordered_products.amount %></td>
      </tr>
      <% end %>
    </tbody>
  </thead>
</table>

<h3>請求情報</h3>
<table>
<tr>
<th>商品合計</th>
<td><%= @order.order_products.sum(:tax_price) %></td>
</tr>
<tr>
<th>送料</th>
<td><%= @order.shipping %></td>
</tr>
<tr>
<th>ご請求額</th>
<td><%= @order.total_price %></td>
</tr>
</table>

