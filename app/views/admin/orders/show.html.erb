<h2>注文履歴詳細</h2>

<table>
<tr>
<th>購入者</th>
<td><%= @order.customer.name %></td>
</tr>
<tr>
<th>注文日</th>
<td><%= @order.created_at %></td>
</tr>
<tr>
<th>配送先</th>
<td><%= @order.shipping_address %></td>
</tr>
<tr>
<th>支払方法</th>
<td><% @order.payment_method %></td>
</tr>
<tr>
<th>注文ステータス</th>
<td>
  <%= form_with url:admin_order_path(@order),local:true,method: :patch do |f| %> 
  <%= f.select :order_status,Order.order_statuses.keys.map {|k| [I18n.t("enums.order.order_status.#{k}"), k]} %>
  <%= f.submit "更新" %>
  <% end %>
  </td>
</tr>
</table>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th>制作ステータス</th>
    </tr>
    <tbody>
      <% @order each do |order| %>
      <tr>
        <td><%= order.ordered_products.name %></td>
        <td><%= order.tax_price %></td>
        <td><%= order.ordered_products.amount %></td>
        <td><%= order.total_price %></td>
        <td>
          <%= form_with url:admin_ordered_product_path(order.ordered_product),local:true,method: :patch do |f| %> 
          <%= f.select :work_status,OrderedProduct.work_statuses.keys.map {|k| [I18n.t("enums.order_product.work_status.#{k}"), k]} %>
          <%= f.submit "更新" %>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </thead>
</table>