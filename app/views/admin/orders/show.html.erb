<h2>注文履歴詳細</h2>

<table>
<tr>
<th>購入者</th>
<td><%= @order.customer.name %></td>
</tr>
<tr>
<th>注文日</th>
<td><%= @order.created_at %></td>
</tr>
<tr>
<th>配送先</th>
<td><%= @order.shipping_address %></td>
</tr>
<tr>
<th>支払方法</th>
<td><% @order.payment_method %></td>
</tr>
<tr>
<th>注文ステータス</th>
<td>
  <%= form_with url:admin_order_path(@order),local:true,method: :patch do |f| %> 
  <%= f.select :order_status,options_for_select(Order.order_statuses) %></td>
  <%= f.submit "更新" %>
  <% end %>
</tr>
</table>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th>制作ステータス</th>
    </tr>
    <tbody>
      <% @order each do |order| %>
      <tr>
        <td><%= order.created_at %></td>
        <td><%= order.user.name %></td>
        <td><%= order.order_products.amount %></td>
        <td><%= order.order_status %></td>
        <td><%= order.order_status %></td>
      </tr>
    </tbody>
  </thead>
</table>