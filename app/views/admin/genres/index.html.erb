<div class="container">
  <h2>ジャンル一覧・追加</h2>
  　<!--ジャンルの新規登録フォーム-->

    <%= form_for @genre, :url => {:action => :create} do |f| %>
      <div class="field">
        <label for="genre_title">ジャンル名</label>
        <%= f.text_field :genre_name, autofocus: true, class: "genre_name" %>
      </div>
      <div class="actions">
          <%= f.submit "新規登録" ,class: 'btn btn-sm btn-success' %>
      </div>
    <% end %>

    <!--ジャンル一覧 -->
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>ジャンルaaa</th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.genre_name %></td>
          </tr>
          <tr>
            <td><%= link_to '編集', edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success edit_genre_#{genre.id}" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>