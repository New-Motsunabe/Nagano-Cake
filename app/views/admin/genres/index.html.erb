
  <h2>ジャンル一覧・追加</h2>
  <div class="container genre-container">
    <div class="genre-row">
    　<!--ジャンルの新規登録フォーム-->
    　<%= render 'layouts/errors', obj: @genre %>
    　
    　<%= form_with model: @genre,url: admin_genres_path,local: true do |f| %>
        <table>
          <tr class="field">
            <label for="genre_title">ジャンル名</label>
            <%= f.text_field :genre_name, autofocus: true, class: "genre_name" %>
          </tr>
          <tr class="actions">
            <%= f.submit "新規登録" ,class: 'btn btn-sm btn-success genre-btn' %>
          </tr>
        </table>
      <% end %>
    </div>
    
      <!--ジャンル一覧 -->
      <table class="table table-hover table-inverse table-bordered">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td class="text-left"><%= genre.genre_name %></td>
              <td class="ç"><%= link_to '編集', edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success edit_genre_#{genre.id}" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</main>