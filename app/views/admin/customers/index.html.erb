<div class="container">
  <h2 class="admin_customer_index">会員一覧</h2>
  <table class="table">
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
    <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.id %></td>
      <td>
        <%= link_to  admin_customer_path(customer) do %>
          <%= customer.last_name %><%= customer.first_name %>
        <% end %>
      </td>
      <td><%= customer.email %></td>
      <td>
        <% if customer.is_deleted == false %>
          <p class="available">有効</p>
        <% else %>
          <p class="invalid">退会</p>
        <% end %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
