<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>商品新規登録</h2>
       <%= form_for(@product, url: admin_products_path, method: :post, class: "form-horizontal") do |f| %>
       
        <div class="form-group">
          <p><%= f.label :商品画像 %>
          <%= f.attachment_field :image, class: "form-control-file product_image" %></p>
        </div>
        
        <div class="form-group">
          <p><%= f.label :商品名 %>
          <%= f.text_field :name, autofocus: true, placeholder: "商品名", class: "form-control name" %></p>
        </div>
        
        <div class="form-group">
          <p><%= f.label :商品説明 %>
          <%= f.text_area :introduction, autofocus: true, placeholder: "説明文を記述", class: "form-control introduction" %></p>
        </div>
        
        <div class="form-group">
          <p><%= f.label :ジャンル %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, class: "form-control genre_id" %></p>
        </div>
        <!--Genre.allでジャンルテーブルの情報を取得-->
        
        <div class="form-group">
          <p><%= f.label :税抜き価格 %>
          <%= f.text_field :price, autofocus: true, placeholder: "1000", class: "form-control price" %></p>
        </div>
        
        <div class="form-group">
          <p><%= f.label :販売ステータス %>
          <%= f.select :is_active, ["販売中", "販売停止"], class: "form-control is_active" %></p>
        </div>
        
        <div class="form-group">
          <%= f.submit "新規登録", class: "btn btn-secondary" %>
        </div>
        
      <% end %>
    </div>
  </div>
</div>
