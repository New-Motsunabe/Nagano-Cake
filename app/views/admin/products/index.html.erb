<h2>商品一覧</h2>

<table class="table">
  <thead>
    <tr>
      <td>商品ID</td>
      <td>商品名</td>
      <td>税抜き価格</td>
      <td>ジャンル</td>
      <td>ステータス</td>
    </tr>
  </thead>
  <tbody>
    <% @products. each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.genre.name %></td>
        <td><%= product.is_active %></td>
      </tr>
    <% end %>
  </tbody>
</table>